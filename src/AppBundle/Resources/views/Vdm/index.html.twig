{% extends '::base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}" />
{% endblock %}

{% block body -%}

    <div class="container">
        <h1>Vdm list</h1>
        {% for entity in entities %}
            <div class="col-sm-4">
                <div class="vdm">
                    <div class="content">
                        {{ entity.content }}
                    </div>
                    <div>
                        <span>
                            {{ entity.when|date('d-m-Y H:i') }} | {{ entity.author }}
                        </span>
                        <span>
                            id : {{ entity.id }}
                        </span>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
